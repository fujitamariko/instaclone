<p id="notice"><%= notice %></p>

<p>
  <strong>ID:</strong>
  <%= @picture.user_id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @picture.user.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @picture.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @picture.content %>
</p>

<p>
  <strong>Image:</strong>
  <%= @picture.image %>
</p>

<br>
<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'Remove Bookmark', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'Bookmark', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<br>
<br>

